<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b_bg_blur" >
   
    <!-- 위에부분 -->
	<ImageView
	    android:id="@+id/img_question_topbg"
	    android:layout_width="fill_parent"
	    android:layout_height="56dp"
	    android:scaleType="fitXY"
	    android:src="@drawable/navi_red" />
	
	<ImageView
	    android:id="@+id/img_question_navi"
	    android:layout_width="287dp"
	    android:layout_height="56dp"
	    android:layout_alignBottom="@+id/img_question_topbg"
	    android:layout_centerHorizontal="true"
	    android:src="@drawable/c_navi_step1" />
	
	<!-- 아래부분 -->
	<ImageView
	    android:id="@+id/img_question_bottomBg"
	    android:layout_width="fill_parent"
	    android:layout_height="80dp"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:scaleType="fitXY"
	    android:src="@drawable/b_bg_bottom" />
	
	<ImageButton 
	    android:id="@+id/img_question_next"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="26.67dp"
	    android:background="@android:color/transparent"
	    android:src="@drawable/c_next_btn_selector"/>

    <ImageView
        android:id="@+id/img_question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_question_navi"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/d_text_top_health" />
    
    <ImageView
        android:id="@+id/img_question_progressView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@+id/img_question_navi"
		android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/d_view_young_one" />
    
    <ImageView
        android:id="@+id/img_question_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/img_question_navi"
		android:layout_below="@+id/img_question_title"
		android:layout_marginTop="80dp"
        android:src="@drawable/d_question_health_1" />


    <ImageButton
        android:id="@+id/imgBtn_question_answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_question_title"
        android:layout_alignLeft="@+id/img_question_body"
        android:layout_marginTop="190dp"
        android:background="@android:color/transparent"
        android:src="@drawable/d_answer_health_1_1" />

    <ImageButton
        android:id="@+id/img_question_answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@+id/imgBtn_question_answer1"
		android:layout_alignLeft="@+id/imgBtn_question_answer1"
		android:layout_marginTop="29.34dp"
        android:background="@android:color/transparent"
        android:src="@drawable/d_answer_health_1_2" />

    <ImageButton
        android:id="@+id/img_question_answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@+id/img_question_answer2"
		android:layout_alignLeft="@+id/img_question_answer2"
		android:layout_marginTop="29.34dp"
        android:background="@android:color/transparent"
        android:src="@drawable/d_answer_health_1_2" />

    <ImageButton
        android:id="@+id/img_question_answer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@+id/img_question_answer3"
		android:layout_alignLeft="@+id/img_question_answer3"
		android:layout_marginTop="29.34dp"
        android:background="@android:color/transparent"
        android:src="@drawable/d_answer_health_1_2" />


</RelativeLayout>
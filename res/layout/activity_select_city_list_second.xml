<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b_bg_blur"
    >

    <!-- navi -->
    <ImageView
        android:id="@+id/img_selectCityListSecond_naviBar"
        android:layout_width="fill_parent"
        android:layout_height="50.67dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/b_bg_navigation_bar" />

    <ImageView
        android:id="@+id/img_selectCityListSecond_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/b_text_top" />

    
    <!--  bottom  -->
    <ImageView
        android:id="@+id/img_selectCityListSecond_bottombg"
        android:layout_width="fill_parent"
        android:layout_height="80.33dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:src="@drawable/b_bg_bottom" />

    <Button
        android:id="@+id/button_selectCityList_start"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:background="@drawable/b_start_btn" />
    
    <!-- middle city list -->
    <ImageView
        android:id="@+id/img_selectCityListSecond_midbg"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/img_selectCityListSecond_bottombg"
        android:scaleType="fitXY"
        android:background="@drawable/b_menu_bg" />

    <ImageButton
        android:id="@+id/imgBtn_selectCityListSecond_sejong"
        android:layout_width="68.67dp"
        android:layout_height="100dp"
        android:layout_above="@+id/img_selectCityListSecond_bottombg"
        android:layout_alignLeft="@+id/button_selectCityList_start"
        android:layout_marginLeft="21.33dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/b_small_sejong_btn" />

    <ImageButton
        android:id="@+id/imgBtn_selectCityListSecond_chungcheongnamdo"
        android:layout_width="68.67dp"
        android:layout_height="100dp"
        android:layout_above="@+id/img_selectCityListSecond_bottombg"
        android:layout_toLeftOf="@+id/imgBtn_selectCityListSecond_sejong"
        android:layout_marginRight="-21.33dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/b_small_chungcheongnamdo_btn" />
    
     <ImageButton
        android:id="@+id/imgBtn_selectCityListSecond_daejeon"
        android:layout_width="68.67dp"
        android:layout_height="100dp"
        android:layout_above="@+id/img_selectCityListSecond_bottombg"
        android:layout_toRightOf="@+id/imgBtn_selectCityListSecond_sejong"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/b_small_daejeon_btn" />
     
    <ImageButton
        android:id="@+id/imgBtn_selectCityListSecond_chungcheongbukdo"
        android:layout_width="68.67dp"
        android:layout_height="100dp"
        android:layout_above="@+id/img_selectCityListSecond_bottombg"
        android:layout_toRightOf="@+id/imgBtn_selectCityListSecond_daejeon"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/b_small_chungcheongbukdo_btn" />     
        
    <ImageView
        android:id="@+id/img_selectCityListSecond_City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_selectCityListSecond_naviBar"
        android:layout_above="@+id/imgBtn_selectCityListSecond_chungcheongbukdo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/b_big_chungcheongbukdo" />
    
    <ImageButton
        android:id="@+id/imgBtn_selectCityListSecond_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgBtn_selectCityListSecond_sejong"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:src="@drawable/b_btn_left" />

    <ImageButton
        android:id="@+id/imgBtn_selectCityListSecond_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgBtn_selectCityListSecond_sejong"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:src="@drawable/b_btn_right" />



</RelativeLayout>

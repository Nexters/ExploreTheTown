<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b_bg_blur">

    <ImageView
        android:id="@+id/img_question_neighbor_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seek_top"
        android:layout_centerVertical="true"
        android:src="@drawable/f_question" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/img_question_neighbor_question"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img_question_neighbor_title"
        android:src="@drawable/f_bg_line" />

    <ImageView
        android:id="@+id/img_question_neighbor_navi"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/f_top_process_navi_attach" />

    <ImageView
        android:id="@+id/img_question_neighbor_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/img_question_neighbor_navi"
        android:src="@drawable/f_text_top_people" />

    <SeekBar
        android:id="@+id/seek_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/img_question_neighbor_question"
        android:layout_marginTop="25dp"
        android:thumb="@drawable/f_controler_people" />

    <SeekBar
        android:id="@+id/seek_rightUp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/seek_top"
        android:layout_marginTop="13dp"
        android:thumb="@drawable/f_controler_people" />

    <SeekBar
        android:id="@+id/seek_rightDown"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/seek_rightUp"
        android:layout_marginTop="10dp"
        android:thumb="@drawable/f_controler_people" />

    <SeekBar
        android:id="@+id/seek_leftDown"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/seek_rightDown"
        android:layout_marginTop="11dp"
        android:thumb="@drawable/f_controler_people" />

    <SeekBar
        android:id="@+id/seek_leftUp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/seek_leftDown"
        android:layout_marginTop="13dp"
        android:thumb="@drawable/f_controler_people" />

    <ImageView
        android:id="@+id/img_question_neighbor_bottombg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/b_bg_bottom" />

    <Button
        android:id="@+id/imgBtn_questionNeighbor_Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/c_next_btn_selector" />

</RelativeLayout>